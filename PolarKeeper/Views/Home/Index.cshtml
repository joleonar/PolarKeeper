@model PolarKeeper.ViewModels.PolarPersonalTrainerLogin
@using System.Globalization
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-12" style="margin-top:20px;">
        @if (Request.Cookies["runKeeperAccessToken"] == null)
        {
            @Html.ActionLink("Log in to RunKeeper", "Authorize", "Home")
            using (Html.BeginForm("LoginPolarPersonalTrainer", "Home", FormMethod.Post))
             {
                @Html.EditorFor(m => m)
                <input type="submit" class="btn btn-info"/>
             }
        }
        else
        {
            using (Html.BeginForm("Upload", "Home", FormMethod.Post, new {enctype = "multipart/form-data"}))
             {
                 <div class="form-group">
                     <input type="file" multiple="multiple" name="polarFile" accept="text/xml" style="width: 100%" />
                 </div>
                 <div class="form-group">
                     <input type="submit" id="btnUpload" value="Upload" class="btn btn-info" />
                 </div>
             }
        }
    </div>
</div>
